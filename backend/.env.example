# Backend Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# OneDrive Configuration (Microsoft Graph API)
# Get these from Azure App Registration: https://portal.azure.com
ONEDRIVE_CLIENT_ID=your-azure-app-client-id
ONEDRIVE_CLIENT_SECRET=your-azure-app-client-secret
ONEDRIVE_TENANT_ID=common
ONEDRIVE_REDIRECT_URI=http://localhost:3001/api/onedrive/callback

# Google Drive Configuration (Google Cloud Console)
# Get these from Google Cloud Console: https://console.cloud.google.com
GOOGLE_DRIVE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_DRIVE_CLIENT_SECRET=your-google-client-secret
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:3001/api/googledrive/callback

# Supabase Configuration (for Study-AI-Drive)
SUPABASE_URL=your-supabase-project-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Cloud Storage Configuration
CLOUD_STORAGE_PROVIDER=onedrive
# Alternative providers: googledrive, dropbox (future implementation)

# Database Configuration (Optional - for traditional setup)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=study_ai_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DATABASE_URL=postgresql://your_db_user:your_db_password@localhost:5432/study_ai_db

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=7d

# AI Provider API Keys
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_AI_API_KEY=your_google_gemini_api_key_here
ANTHROPIC_API_KEY=your_claude_api_key_here

# File Upload Configuration
MAX_FILE_SIZE=100MB
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=pdf,mp4,avi,mov,wmv,flv,webm

# AI Processing Configuration
DEFAULT_AI_PROVIDER=openai  # Options: openai, google, anthropic
QUIZ_QUESTIONS_PER_SESSION=10
MIN_QUIZ_DIFFICULTY=1
MAX_QUIZ_DIFFICULTY=5

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Logging
LOG_LEVEL=info  # Options: error, warn, info, debug
LOG_FILE=./logs/app.log